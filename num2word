 );

# Все варианты написания разрядов прописью скомпануем в один небольшой массив
 $r=array(
  array('...ллион','','а','ов'), // используется для всех неизвестно больших разрядов 
  array('тысяч','а','и',''),
  array('миллион','','а','ов'),
  array('миллиард','','а','ов'),
  array('триллион','','а','ов'),
